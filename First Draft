    // Render reviews
    const reviewsList = document.getElementById('reviewsList');
    reviews.forEach((text, i) => {
      const div = document.createElement('div');
      div.className = 'review';
      div.innerHTML = `
        <div class="stars">★★★★★</div>
        <div class="rev-meta">Guest ${i+1} — 5 stars</div>
        <div class="rev-text">${text.replace(/^⭐+ /, '')}</div>
      `;
      reviewsList.appendChild(div);
    });

    // Form to WhatsApp: take fields and open WhatsApp with prefilled message
    function submitForm(e){
      e.preventDefault();
      const name = encodeURIComponent(document.getElementById('name').value.trim());
      const phone = encodeURIComponent(document.getElementById('phone').value.trim());
      const tour = encodeURIComponent(document.getElementById('tourType').value.trim() || 'General enquiry');
      const notes = encodeURIComponent(document.getElementById('notes').value.trim());
      if(!name || !phone){
        alert('Please enter your name and WhatsApp phone number.');
        return;
      }
      const message = `Premier Holidays - Quote request.%0AName: ${name}%0APhone (WhatsApp): ${phone}%0ATour: ${tour}%0ANotes: ${notes}%0A%0APlease respond with package price.`;
      // WhatsApp number (business)
      const wa = '60123410000';
      window.open(`https://wa.me/${wa}?text=${message}`, '_blank');
    }
  </script>
</body>
